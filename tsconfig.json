{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "jest"
        ]
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}